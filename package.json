{
	"name": "react-router-kitchen",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"setup": "react-router typegen && playwright install chrome",
		"dev": "react-router dev",
		"dev:dogs": "react-router dev --mode dogs",
		"build": "react-router build --mode cats",
		"build:dogs": "react-router build --mode dogs",
		"preview": "vite preview",
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "react-router typegen && tsc --build --noEmit",
		"typegen:watch": "react-router typegen --watch",
		"test": "vitest --run",
		"test:watch": "vitest --watch",
		"coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"knip": "knip",
		"validate": "run-p test lint typecheck test:e2e",
		"prepare": "husky"
	},
	"dependencies": {
		"@conform-to/react": "^1.2.2",
		"@conform-to/zod": "^1.2.2",
		"@react-router/node": "^7.0.2",
		"clsx": "^2.1.1",
		"isbot": "^5.1.17",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router": "^7.0.2",
		"tailwind-merge": "^2.5.5",
		"universal-cookie": "^7.2.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@playwright/test": "^1.49.0",
		"@react-router/dev": "^7.0.2",
		"@storybook/addon-essentials": "^8.4.7",
		"@storybook/addon-interactions": "^8.4.7",
		"@storybook/react": "^8.4.7",
		"@storybook/react-vite": "^8.4.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.1.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^22.10.1",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitest/coverage-v8": "^2.1.8",
		"autoprefixer": "^10.4.20",
		"dotenv": "^16.4.7",
		"husky": "^9.1.7",
		"jsdom": "^25.0.1",
		"knip": "^5.39.2",
		"lint-staged": "^15.2.10",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.49.0",
		"postcss": "^8.4.49",
		"react-router-devtools": "^1.0.5",
		"storybook": "^8.4.7",
		"tailwindcss": "^3.4.16",
		"typescript": "^5.7.2",
		"vite": "^5.4.11",
		"vite-tsconfig-paths": "^5.1.3",
		"vitest": "^2.1.8"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.ts,jsx,tsx,json,jsonc}": [
			"biome check --write --organize-imports-enabled=false --no-errors-on-unmatched"
		]
	},
	"engines": {
		"node": ">=22.11.0",
		"npm": ">=10.9.0"
	}
}
